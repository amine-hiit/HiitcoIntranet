{{ form_start(form) }}
<div class="col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="row">
                            {{ form_label(form.roles,'roles'|trans|capitalize) }}
                        </div>
                        <div class="row">
                            {{ form_widget(form.roles, {'attr':{
                                'class':'form-control select2 select2-multiple',
                                'requiered':'false',
                                }})
                            }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="row">
                            {{ form_label(form.employees,'employees'|trans|capitalize) }}
                        </div>
                        <div class="row">
                            {{ form_widget(form.employees, {'attr':{
                                'class':'form-control select2 select2-multiple',
                                }})
                            }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <input class="hidden" name="id" value="{{ form.vars.data.id }}">
            <div class="row">
                <div class="col-sm-6 col-xs-6">
                    <div class="form-group">
                        <div class="row">
                            <a  id ="cancel-edit-{{ form.vars.data.id }}" class="btn bg-danger btn-flat cancel-edit" style="width: 100%";>{{'cancel'|trans|capitalize}}</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xs-6">
                    <div class="form-group">
                        <div class="row">
                            <button  class="btn bg-navy btn-flat" type="submit" style="width: 100%">{{'submit'|trans|capitalize}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
