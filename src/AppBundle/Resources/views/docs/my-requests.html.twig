{% extends "default/layout.html.twig" %}

{% set title = "Mes documents demandés" %}
{% set profile = "profile" %}
{% set certSalary = constant("AppBundle\\Entity\\Document::CERTIFICATION_OF_SALARY") %}
{% set attEmpl = constant("AppBundle\\Entity\\Document::ATTESTATION_OF_EMPLOYMENT") %}
{% set notReady = constant("AppBundle\\Entity\\Document::DOC_NOT_READY") %}
{% set ready = constant("AppBundle\\Entity\\Document::DOC_READY") %}



{% block content %}

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Liste des congés
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i> Espace RH</a></li>
            <li><a href="#">Docs</a></li>
            <li><a href="#">Demander document</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <center>
                            <a href="/intranet/request-doc" type="button" class="btn btn-default btn-flat ">   Demander document   </a>
                            <a href="/intranet/my-docs" type="button disabled" class="btn btn-default btn-flat disabled ">   Mes demandes </a>
                            {% if is_granted('ROLE_HR') %}
                                <a type="button" class="btn btn-default btn-flat " href="/intranet/hrm/docs">  Liste des demandes   </a>
                            {% endif %}
                        </center>

                    </div>


                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr class="success">
                                <th>DEMANDE</th>
                                <th>DATE DEMANDÉ</th>
                                <th>STATUS</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for request in requests %}
                                <tr>

                                    <td>{{ request.type |trans|capitalize }}</td>
                                    <td>{{ request.requestDate|date("d/m/Y") }}</td>
                                    {% if request.status == ready  %}
                                        <td><span class="label label-success flat ">{{ ready|trans|capitalize }}</span></td>
                                    {% else  %}
                                        <td><span class="label label-warning flat">{{ notReady|trans|capitalize }}</span></td>
                                    {% endif %}

                                </tr>
                            {% endfor %}

                        </table>
                    </div>

                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>

    <!-- /.content -->
    <!-- /.content-wrapper -->



{% endblock %}


{% block script %}
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
{% endblock %}

  {% block javascript %}
  $(document).ready(function () {
      $('.sidebar-menu').tree()
      $(function () {

          $('#example2').DataTable({
              'paging': true,
              'lengthChange': true,
              'searching': false,
              'ordering': true,
              'info': true,
              'autoWidth': false
          })
      })
  })
  {% endblock %}


