{% extends "default/layout.html.twig" %}

{% set title = "Liste des congés" %}
{% set profile = "profile" %}

{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{ 'employees.list'|trans|capitalize }}            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i> Espace RH</a></li>
            <li><a href="#">Employés</a></li>
            <li class="active">Liste des employés</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <center>
                            <a type="button" class="btn btn-default btn-flat " href="/intranet/admin/register-new-employee">   Nouvel employé       </a>
                            <a type="button" class="btn btn-default btn-flat disabled" href="/intranet/hrm/employees">  Liste des employés   </a>
                        </center>
                    </div>
                    <div class="box-header">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Type <span class="caret myspace"></span>
                        </a>
                        <a href="export/vacation-requests" class="btn btn-default btn-flat">Exporter en xls</a>

                        <ul class="dropdown-menu">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Valide</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Non valide</a></li>
                        </ul>


                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right"
                                       placeholder="Search">

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->


                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr class="success">
                                <th>ID</th>
                                <th>NOM D'UTILISATEUR</th>
                                <th>EMAIL</th>
                                <th>ETAT</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>{{ employee.id }}</td>
                                    <td><a href="/intranet/employee/{{ employee.id }}">
                                            {% if employee.avatar is not empty %}
                                                <img src="{{ asset(employee.avatar.url) }}" width = "32" height="32" style="border-radius: 50%;" />
                                            {% else %}
                                                <img src="{{ asset(default_avatar) }}" width = "32" height="32" style="border-radius: 50%;" />
                                            {% endif %}
                                            {{ employee.username }}</a>
                                    </td>
                                    <td>{{ employee.email }}</td>
                                    {% if employee.valid %}
                                        <td><span class="label label-success flat ">valide</span></td>
                                    {% elseif not employee.valid %}
                                        <td><span class="label label-danger flat ">non valide</span></td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
{% endblock %}


{% block javascript %}
    $(document).ready(function () {
    $('.sidebar-menu').tree()
    $(function () {
    $('#example2').DataTable({
    'paging': true,
    'lengthChange': true,
    'searching': false,
    'ordering': true,
    'info': true,
    'autoWidth': false
    })
    })
    })
{% endblock %}