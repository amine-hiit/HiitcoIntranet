<div class="box box-success box-solid flat">
    <div class="box-header with-border">
        <h3 class="box-title">Nouvelle formation</h3>

        <div class="box-tools pull-right">
            <a  class="removing btn btn-box-tool" ></a>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->


    <div class="box-body">


        <div class="row">
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(item.level, 'level'|trans|capitalize) }}
                    {{ form_widget(item.level, {'attr':{

                        'class':'form-control'
                    }}) }}
                </div>
            </div>
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(item.speciality, 'speciality'|trans|capitalize) }}
                    {{ form_widget(item.speciality, {'attr':{

                        'class':'form-control'
                    }}) }}
                </div>
            </div>
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(item.diploma, 'diploma'|trans|capitalize) }}
                    {{ form_widget(item.diploma, {'attr':{

                        'class':'form-control'
                    }}) }}
                </div>
            </div>

        </div>
        <div class="row">
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group' >
                    {{ form_label(item.organization, 'organization'|trans|capitalize) }}
                    {{ form_widget(item.organization, {'attr':{
                        'class':'form-control'
                    }}) }}
                </div>
            </div>
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(item.startDate, 'start.date'|trans|capitalize) }}
                    <div class='input-group date'>
                        <div class='input-group-addon'>
                            <i class='fa fa-calendar'></i>
                        </div>
                        {{ form_widget(item.startDate, {'attr':{

                            'class':'form-control pull-right datepicker'
                        }}) }}
                    </div>
                </div>
            </div>
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(item.endDate, 'end.date'|trans|capitalize) }}
                    <div class='input-group date'>
                        <div class='input-group-addon'>
                            <i class='fa fa-calendar'></i>
                        </div>
                        {{ form_widget(item.endDate, {'attr':{

                            'class':'form-control pull-right datepicker'
                        }}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-sm-4 col-xs-12'>
                <div class='form-group' >
                    {{ form_label(item.country, 'country'|trans|capitalize) }}
                    {{ form_widget(item.country, {'attr':{
                        'class':'form-control'
                    }}) }}
                </div>
            </div>
        </div>

    </div>
</div>

