{% extends "default/layout.html.twig" %}

{% set title = "Inscrire un nouveau employé" %}
{% set profile = "profile" %}

{% block stylesheet %}

{% endblock %}


{% block content %}


    <!-- Main content -->
    <section class="content-header">

        <h1>
            Inscrire un nouveau employé:
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa  fa-home"></i> Espace RH</a></li>
            <li><a href="#">  Employés</a></li>
            <li><a href="#"> Nouveau employé</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="col-sm-12 col-xs-12 ">
            <div class="box box-info">
                {{ form_start(form) }}
                <div class="box-header with-border">
                    <center>
                        <a type="button" class="btn btn-default btn-flat disabled" href="/intranet/admin/register-new-employee">   Nouveau employé       </a>
                        <a type="button" class="btn btn-default btn-flat " href="/intranet/hrm/employees">  Liste des employés   </a>
                    </center>
                </div>
                <div class="box-body">
                            <div class="col-sm-12 col-xs-12">
                                <div class="form-group" >
                                    {{ form_label(form.username) }}
                                    {{ form_widget(form.username, {'attr':{

                                        'class':'form-control'
                                    }}) }}
                                </div>
                                <div class="form-group" >
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email, {'attr':{

                                        'class':'form-control'
                                    }}) }}
                                </div>
                                <div class="form-group" >
                                    {{ form_label(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first, {'attr':{

                                        'class':'form-control'
                                    }}) }}
                                </div>
                                <div class="form-group" >
                                    {{ form_label(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second, {'attr':{

                                        'class':'form-control'
                                    }}) }}
                                </div>
                            </div>
                </div>
                <div class="box-footer">
                    <div class="col-sm-12 col-xs-12">

                        <input type="submit" class="btn bg-navy btn-flat pull-right" value="Envoyer" />

                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>


    <!-- /.content -->
    <!-- /.content-wrapper -->

{% endblock %}


{% block script %}
    {# <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')}}"></script>#}
    <script src="{{ asset('bower_components/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}

  {% block javascript %}
      jQuery(document).ready(function () {
          $('.select2').select2();

          $('.datepicker').datepicker({
          autoclose: true
          });
      });
  {% endblock %}




