{{ form_start(form, {'attr': {'id': 'form'}}) }}
    <div class='col-sm-12 col-xs-12'>
        <div class="row">
            <div class='col-sm-6 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(form.name, 'name'|trans|capitalize) }}
                    {{ form_widget(form.name, {'attr':{
                        'class':'form-control'
                    }}) }}
                </div>
            </div>
            <div class='col-sm-6 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(form.date, 'date'|trans|capitalize) }}
                    <div class='input-group date'>
                        <div class='input-group-addon'>
                            <i class='fa fa-calendar'></i>
                        </div>
                        {{ form_widget(form.date, {'attr':{
                            'class':'form-control pull-right datepicker'
                        }}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-sm-12 col-xs-12'>
                <div class='form-group'>
                    {{ form_label(form.description, 'description'|trans|capitalize) }}
                    {{ form_widget(form.description, {'attr':{
                        'class':'form-control'
                    }}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-xs-6">
                <a id="update-project-cancel-{{ form.vars.value.id }}" class="btn btn-default flat" style="width: 100%">
                    {{ 'cancel'|trans|capitalize }}
                </a>
            </div>
            <div class="col-sm-6 col-xs-6">
                <a class="btn btn-default flat col-sm-6 col-xs-6" style="width: 100%"
                   id="update-project-action-{{ form.vars.value.id }}">
                    {{ 'submit'|trans|capitalize }}
                </a>
            </div>
        </div>
    </div>
{{ form_end(form) }}


