{% extends "default/layout.html.twig" %}

{% set title = "Fiche collaborateur" %}
{% set profile = "profile" %}

{% block stylesheet %}

{% endblock %}


{% block content %}



    <!-- Content Wrapper. Contains page content -->
        <section class="content">

            <div class="box box-widget widget-user">
                <div class="widget-user-header bg-black flat">
                    <h3 class="widget-user-username">{{ employee.userName }}</h3>
                    <h5 class="widget-user-desc">Développeur Back end</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle" alt="User Avatar" src={{asset(avatar_url) }}>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-12 col-sm-offset- ">
                            <div class="description-block">
                                <h3>Mohammed Amine Jabri</h3>
                                <h4 >Développeur Back-End</h4>
                                <span class="description-text">{{ lastFormations.organization }} . {{ lastFormations.formation.speciality }}</span>
                                <span class="description-text"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Main content -->

        <section class="content">



            <ul class="timeline">

                <li>
                    <i class="fa fa-black-tie bg-black"></i>

                    <div class="timeline-item flat">


                        {% for formation in formations %}

                            <h3 class="timeline-header ">{{ formation.organization }} </h3>

                            <div class="timeline-body">
                                <p><span>{{ formation.formation.diploma }}</span> . <span>{{ formation.formation.speciality }}</span></p>
                                <p><span>{{ formation.startDate|date("Y") }}</span> - <span>{{ formation.endDate|date("Y") }}</span></p>

                            </div>
                            <div class="timeline-footer">
                                <a class="btn btn-primary btn-xs flat">Modifier</a>
                                <a class="btn btn-danger btn-xs flat">Supprimer</a>
                            </div>

                        {% endfor %}

                        <div id= "experience-form-holder" class="hidden">
                            {{ form_start(experienceForm, {'id': 'experienceForm'}) }}
                            {{ form_widget(experienceForm) }}

                            <button type="submit" class="btn btn-default flat col-sm-12 col-xs-12 "
                            >
                                Envoyer
                            </button>
                            {{ form_end(experienceForm) }}
                        </div>


                        <a class="btn btn-default flat col-sm-12 col-xs-12 "
                           id="add-experience"
                        >Ajouter Experience</a>





                    </div>
                </li>

                <li>
                    <i class="fa fa-graduation-cap bg-blue"></i>

                    <div class="timeline-item flat">

                        {% for formation in formations %}
                            <h3 class="timeline-header ">{{ formation.organization }} </h3>

                            <div class="timeline-body">
                                <p><span>{{ formation.formation.diploma }}</span> . <span>{{ formation.formation.speciality }}</span></p>
                                <p><span>{{ formation.startDate|date("Y") }}</span> - <span>{{ formation.endDate|date("Y") }}</span></p>

                            </div>
                            <div class="timeline-footer">
                                <a class="btn btn-primary btn-xs flat">Modifier</a>
                                <a class="btn btn-danger btn-xs flat">Supprimer</a>
                            </div>

                        {% endfor %}
                        <div id= "formation-form-holder" class="hidden">
                            {{ form_start(formationForm, {'attr': {'id': 'formationForm'}}) }}
                            <div class="box-header with-border">
                                <h3 class="timeline-header"> Nouvelle formation </h3>
                            </div>
                            <input class="hidden"
                                   id={{ formationForm.vars.id }}
                                   name={{ formationForm.vars.form.children.employee.vars.full_name }}
                                   value={{ app.user.id }}
                            />

                            <div class="box-body">

                                <div class='col-sm-4 col-xs-12'>
                                    <div class='form-group'>
                                        {{ form_label(formationForm.formation) }}<a href='#'> Autre?</a>
                                        {{ form_widget(formationForm.formation, {'attr':{
                                            'class':'form-control'
                                        }}) }}
                                    </div>
                                </div>
                                <div class='col-sm-4 col-xs-12'>
                                    <div class='form-group' >
                                        {{ form_label(formationForm.organization) }}
                                        {{ form_widget(formationForm.organization, {'attr':{
                                            'class':'form-control'
                                        }}) }}
                                    </div>
                                </div>
                                <div class='col-sm-4 col-xs-12'>
                                    <div class='form-group' >
                                        {{ form_label(formationForm.country) }}
                                        {{ form_widget(formationForm.country, {'attr':{
                                            'class':'form-control'
                                        }}) }}
                                    </div>
                                </div>
                                <div class='col-sm-4 col-xs-12'>
                                    <div class='form-group'>
                                        {{ form_label(formationForm.startDate) }}
                                        <div class='input-group date'>
                                            <div class='input-group-addon'>
                                                <i class='fa fa-calendar'></i>
                                            </div>
                                            {{ form_widget(formationForm.startDate, {'attr':{

                                                'class':'form-control pull-right datepicker'
                                            }}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class='col-sm-4 col-xs-12'>
                                    <div class='form-group'>
                                        {{ form_label(formationForm.endDate) }}
                                        <div class='input-group date'>
                                            <div class='input-group-addon'>
                                                <i class='fa fa-calendar'></i>
                                            </div>
                                            {{ form_widget(formationForm.endDate, {'attr':{

                                                'class':'form-control pull-right datepicker'
                                            }}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default flat col-sm-12 col-xs-12 "
                            >Envoyer</button>
                            {% do formationForm.employee.setRendered %}
                            {{ form_end(formationForm) }}
                        </div>


                        <a class="btn btn-default flat col-sm-12 col-xs-12 "
                           id="add-formation"
                        >Ajouter formation</a>

                    </div>
                </li>

            </ul>



        </section>


    <!-- /.content -->
    <!-- /.content-wrapper -->



{% endblock %}


{% block script %}
    {# <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')}}"></script>#}
    <script src="{{ asset('bower_components/select2/dist/js/select2.full.min.js')}}"></script>
    <script src="{{ asset('bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js')}}"></script>
{% endblock %}

  {% block javascript %}
      jQuery(document).ready(function () {
      $('.select2').select2();

      $('.datepicker').datepicker({
      autoclose: true
      });

      jQuery('#add-formation').click(function (e) {
      jQuery('#formation-form-holder').removeClass('hidden')
      jQuery(this).addClass('hidden');
      });

      jQuery('#add-experience').click(function (e) {
      jQuery('#experience-form-holder').removeClass('hidden')
      jQuery(this).addClass('hidden');
      });
      });
  {% endblock %}