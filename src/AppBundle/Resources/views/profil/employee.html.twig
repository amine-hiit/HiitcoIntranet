{% block script %}
    {# <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')}}"></script>#}
    <script src="{{ asset('bower_components/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            $('.select2').select2();

            $('.datepicker').datepicker({
                autoclose: true
            });


            $('.edit-item').click(function () {
                var item = $(this).attr('id').split('-')[1];
                var itemId = $(this).attr('id').split('-')[2];
                $.ajax({
                    url: '/intranet/update/'+item+'/'+itemId,
                    method: 'GET',
                    success(data){
                        $('#'+item+'-'+itemId+'-body-holder').addClass('hidden');
                        $('#'+item+'-'+itemId+'-edit-form-holder').html(data);
                        editActions(item, itemId);
                        $('.datepicker').datepicker({
                            autoclose: true
                        });
                        $('.select2').select2();

                    },
                });
            });

            function cancelUpdate(item, id)
            {
                $('#update-'+item+'-cancel-'+id).click(function () {
                    $('#'+item +'-'+id+'-edit-form-holder').empty();
                    $('#'+item +'-'+id+'-body-holder').removeClass('hidden');
                });
            }
            function submitUpdates()
            {
                $('.update-submit-action').click(function () {
                    var invalid = false;
                    $(this).closest("form").find(':input').each(function () {
                        if( $(this).val() == '' ){
                            $(this).addClass('invalid');
                            invalid = true;
                        }

                    });
                    if ( invalid )
                        return;

                    $(this).closest("form").submit();
                })
            }
            function editActions(item, id)
            {
                cancelUpdate(item,id);
                submitUpdates(item);
            }

            $('.delete-item').click(function () {
                alert('test')
            });

            jQuery('#add-formation').click(function (e) {
                jQuery('#formation-form-holder').removeClass('hidden');
                jQuery(this).addClass('hidden');
            });

            jQuery('#add-language').click(function (e) {
                jQuery('#language-form-holder').removeClass('hidden')
                jQuery(this).addClass('hidden');
            });

            jQuery('#add-experience').click(function (e) {
                jQuery('#experience-form-holder').removeClass('hidden')
                jQuery(this).addClass('hidden');
            });

            jQuery('#add-project').click(function (e) {
                jQuery('#project-form-holder').removeClass('hidden')
                jQuery(this).addClass('hidden');
            });

            jQuery('#cancel-adding-new-experience').click(function (e) {
                jQuery('#experience-form-holder').addClass('hidden')
                jQuery('#add-experience').removeClass('hidden');
