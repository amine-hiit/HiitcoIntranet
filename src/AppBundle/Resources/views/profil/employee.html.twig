{% extends "default/layout.html.twig" %}

{% set title = "Fiche collaborateur" %}
{% set profile = "profile" %}
{% set empId = employee.id %}
{% if employee.avatar is not null %}{% set avatarUrl ="/intranet/file/avatar/" ~ employee.avatar.id  %}{% else %}{% set avatarUrl ='/uploads/img/avatar/default_avatar.png'  %}{% endif %}

{% block stylesheet %}
    <style>
        a.deco-none, a.white {
            color:#fff !important;
            text-decoration:none;
        }



        input.invalid {
            background-color: #ffdddd;
        }

        select.invalid {
            background-color: #ffdddd;
        }

        textarea.invalid {
            background-color: #ffdddd;
        }
    </style>
{% endblock %}


{% block content %}

