{% extends "default/layout.html.twig" %}

{% set title = "Liste des congés" %}
{% set profile = "profile" %}
{% set root = "Espace RH" %}
{% set iroot = "fa-users" %}
{% set dir1 = "congé" %}
{% set dir2 = " liste des congés" %}




{% block content %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
		Liste des congés 
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-users"></i> Espace RH</a></li>
        <li><a href="#">Congé</a></li>
        <li class="active">Mes congés</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header"> 
             <center>
              <button type="button" class="btn btn-default btn-flat disabled">   Mes congés       </button>
              <button type="button" class="btn btn-default btn-flat">   Mon solde        </button>
              <button type="button" class="btn btn-default btn-flat">   Demander congé   </button>
             </center>
             </div>         
             <div class="box-header"> 
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  Type <span class="caret myspace"></span>
                </a>
				<a href="#" class="btn btn-default btn-flat">Exporter en xls</a>

                <ul class="dropdown-menu">
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Congé</a></li>
                  <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Absence</a></li>
                </ul>


              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>
			</div>
            <!-- /.box-header -->


            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr class = "success">
                  <th>Date début</th>
                  <th>Date fin</th>
                  <th>type</th>
                  <th>raison</th>
                  <th>Status</th>
                  <th>raison au cas de refus</th>

                </tr>
                </thead>
                <tbody>
                {% for Leave in listLeave %}     
                <tr>

   	            <td>{{ Leave.startDate | date("d/m/Y")}}</td>
	            <td>{{ Leave.endDate | date("d/m/Y")}}</td>
                <td>{{ Leave.type }}</td>
	            <td>{{ Leave.reason }}</td>
                {% if Leave.validationStatus=='n' %}
                <td><span class="label label-danger ">Refusé</td>
                {% elseif Leave.validationStatus==null %}
                <td><span class="label label-warning">Non traitée</td>
                {% elseif Leave.validationStatus=='y' %}
                <td><span class="label label-success">Approuvée</td>
                {% endif %}
	            <td>{{ Leave.refuseReason }}</td>

                </tr>
                {% endfor %}     
               
              </table>
            </div>



          </div>
          <!-- /.box -->
        </div>
    </section>
  </div>

    <!-- /.content -->
  <!-- /.content-wrapper -->



{% endblock %}


{% block script %}
<script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
{% endblock %}

  {% block javascript %}
    $(document).ready(function () {
	    $('.sidebar-menu').tree()
	    $(function () {

	    $('#example2').DataTable({
	      'paging'      : true,
	      'lengthChange': true,
	      'searching'   : false,
	      'ordering'    : true,
	      'info'        : true,
	      'autoWidth'   : false
	   	 })
  	})
  })

  {% endblock %}


