{% set default_avatar =  asset('/uploads/img/avatar/default_avatar.png') %}
{% if app.user.avatar.name  is defined %}
    {% set avatar_url = app.user.avatar.url %}
    {% set avatar_alt = app.user.avatar.url %}
{% else %}
    {% set avatar_url = default_avatar %}
    {% set avatar_alt =  'avatar' %}
{% endif %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hiit Consulting | {{ title }}</title>
    <link rel="stylesheet" href="{{ asset('bower_components/select2/dist/css/select2.min.css') }}">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bower_components/Ionicons/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dist/css/AdminLTE.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dist/css/skins/_all-skins.min.css') }}">
    <link rel="stylesheet" href="{{ asset('intra/css/notification.css') }}">
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    {% block stylesheet %}
    {% endblock %}


</head>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <header class="main-header">
        <a href="/intranet/home" class="logo">
            <span class="logo-mini">Hiit</span>
            <span class="logo-lg"><b>Hiit </b>Consulting</span>
        </a>

        <nav class="navbar navbar-static-top">
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" id="notification-link" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning count"></span>
                        </a>
                        <ul class="dropdown-menu flat " style="width: 450px;">
                            <li class="header">
                                Vous avez <span class="count"></span> notifications</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <div class="menu notifications" id = "notifications-menu">
                                </div>
                            </li>
                            <li class="footer"><a href="/intranet/notification-list">Voir toutes</a></li>
                        </ul>
                    </li>
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src={{ asset(avatar_url) }} class="user-image" alt={{ avatar_alt }}>
                            <span class="hidden-xs">{{ app.user.username }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src={{ asset(avatar_url) }}  class="img-circle" alt={{ avatar_alt }}>

                                <p>
                                    {{ app.user.username }} - {{ profile }}
                                </p>
                            </li>
                            <!-- MENU Body -->

                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('employee-profil', {'employee': app.user.id}) }}" class="btn
                                       btn-default btn-flat">Profile</a>
                                </div>
                                <div class="pull-right">
                                    <a href="/logout" class="btn btn-default btn-flat">Deconnexion</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <aside class="main-sidebar">
        <section class="sidebar">
            <div class="user-panel">
                <div class="pull-left image">
                    <img src={{ asset(avatar_url) }} class="img-circle" alt={{ avatar_alt }}>
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.username }}</p>
                </div>
            </div>
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">MENU</li>
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                        <span>Accueil</span>
                    </a>
                </li>
                <li>
                    <a href={{ path('employee-profil', {'employee': app.user.id}) }}>
                        <i class="fa fa-user"></i>
                        <span>Profil</span>
                    </a>
                </li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-users"></i><span>Espace RH</span>
                        <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('my_vacations_requests') }}"><i class="fa fa-circle-o"></i>Congés</a></li>
                        <li><a href="{{ path('doc-request') }}"><i class="fa fa-circle-o"></i> Demander document</a></li>
                        <li><a href="{{ path('cooptation-request') }}"><i class="fa fa-circle-o"></i> Cooptations</a></li>
                        {% if is_granted('ROLE_HR') %}
                        <li><a href="{{ path('employees-list') }}"><i class="fa fa-circle-o"></i> Employés</a></li>
                        {% endif %}
                    </ul>
                </li>
                {% if is_granted('ROLE_HR') %}
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-black-tie"></i>
                        <span>Espace recrutement</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                         </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="#"><i class="fa fa-circle-o"></i> Poster une offre</a></li>
                        <li><a href="#"><i class="fa fa-circle-o"></i> Liste des offres</a></li>
                        <li><a href="#"><i class="fa fa-circle-o"></i> Liste des candidats </a></li>
                    </ul>
                </li>
                {% endif %}

                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-graduation-cap"></i>
                        <span>Espace formation</span>
                    </a>
                </li>


                {% if is_granted('ROLE_DIRECTOR') %}
                <li>
                    <a href="{{ path('parameters') }}">
                        <i class="fa fa-wrench"></i>
                        <span>Configuration</span>
                    </a>
                </li>
                {% endif %}
            </ul>
        </section>
    </aside>
    <div class="content-wrapper" style="min-height: 960px;">
        {% if  not app.user.valid %}
            <div class="callout callout-danger flat">
                <a href="{{ path('"employee-form') }}"> Veuillez Remplir votre fiche Collaborateur</a>
            </div>
        {% endif %}
        {% for type, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="flat alert alert-{{ type }} fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}

        {% endblock %}
    </div>
    <footer class="main-footer">
                <p align="center"> {{ craue.get('company_name') }} | {{ craue.get('company_address') }}
                    | {{ craue.get('company_email') }} | {{ craue.get('company_number') }} </p>
    </footer>

</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
<script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bower_components/jquery-slimscroll/jquery.slimscroll.min.js') }}"></script>
<script src="{{ asset('bower_components/fastclick/lib/fastclick.js') }}"></script>
<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
<script src="{{ asset('dist/js/demo.js') }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<script src="{{ asset('intra/js/notification.js') }}"></script>
{% block script %}

{% endblock %}

<script>
    $(document).ready(function () {
        $('.sidebar-menu').tree();

    })
    setTimeout(function(){
        $('.alert').fadeOut()
    }, 5000);

    {% block javascript %}

    {% endblock %}

</script>
</body>
</html>
