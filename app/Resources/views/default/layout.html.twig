    <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    {% block stylesheet %}{% endblock %}


</head>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <header class="main-header">
        <!-- Logo -->


        <!--a href="../../index2.html" class="logo"-->

        <a href="/intranet/home" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini">Hiit</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Hiit </b>Consulting</span>
        </a>
        <!--/a-->

        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- MESSAGES: style can be found in dropdown.less -->
                    <!-- Notifications: style can be found in dropdown.less -->
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning">10</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">You have 10 notifications</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-users text-aqua"></i> 5 new members joined today
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="footer"><a href="#">View all</a></li>
                        </ul>
                    </li>
                    <!-- TASKS: style can be found in dropdown.less -->

                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src={{ asset(avatar_url) }} class="user-image" alt={{ avatar_alt }}>
                            <span class="hidden-xs">{{ app.user.username }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src={{ asset(avatar_url) }}  class="img-circle" alt={{ avatar_alt }}>

                                <p>
                                    {{ app.user.username }} - {{ profile }}
                                </p>
                            </li>
                            <!-- MENU Body -->

                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href={{ path('employee-profil', {'employee': app.user.id}) }} class="btn
                                       btn-default btn-flat">Profile</a>
                                </div>
                                <div class="pull-right">
                                    <a href="/logout" class="btn btn-default btn-flat">Deconnexion</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src={{ asset(avatar_url) }} class="img-circle" alt={{ avatar_alt }}>
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.username }}</p>
                </div>
            </div>
            <!-- search form -->

            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">MENU</li>

                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                        <span>Accueil</span>
                    </a>
                </li>

                <li>
                    <a href={{ path('employee-profil', {'employee': app.user.id}) }}>
                        <i class="fa fa-user"></i>
                        <span>Profil</span>
                    </a>
                </li>

                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-users"></i>
                        <span>Espace RH</span>
                        <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="/intranet/my-vacation-requests"><i class="fa fa-circle-o"></i>Congés</a></li>
                        <li><a href="/intranet/request-a-doc"><i class="fa fa-circle-o"></i> Demander document</a></li>
                        <li><a href="/intranet/cooptation"><i class="fa fa-circle-o"></i> Cooptations</a></li>
                        {% if is_granted('ROLE_HR') %}
                            <li><a href="/intranet/employees"><i class="fa fa-circle-o"></i> Employées</a></li>
                        {% endif %}
                    </ul>
                </li>

                {% if is_granted('ROLE_HR') %}
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-black-tie"></i>
                            <span>Espace recrutement</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                             </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#"><i class="fa fa-circle-o"></i> Poster une offre</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Liste des offres</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Liste des candidats </a></li>
                        </ul>
                    </li>
                {% endif %}

                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-graduation-cap"></i>
                        <span>Espace formation</span>
                    </a>
                </li>


                {% if is_granted('ROLE_DIRECTOR') %}
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-wrench"></i>
                            <span>Parametrage</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- =============================================== -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        {% if  not app.user.valid %}
            <div class="callout callout-danger flat">
                <a href="/intranet/form"> Veuillez Remplir votre fiche Collaborateur</a>
            </div>
        {% endif %}

        {% block content %}
        {% endblock %}
    </div>

    <!-- /.content-wrapper -->

    <footer class="main-footer">
        <div class="container">
            <p align="center">HiitConsulting | 6, Rue Ahmed El Brihi, ben Jdia, Casablanca | contact@hiitconsulting.com
                |
                (+212)6 00 06-97-74</p>
        </div>
    </footer>


</div>
<!-- ./wrapper -->

